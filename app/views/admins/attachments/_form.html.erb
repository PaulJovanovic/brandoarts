<div class="section">
  <%= form_for([:admins, @attachment]) do |f| %>
    <%= f.hidden_field :admin_id, value: @attachment.admin_id %>
    <div class="two-thirds">
      <div class="prl">
        <div class="field">
          <%= f.file_field :resume %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Save" %>
      </div>
    </div>
  <% end %>
</div>