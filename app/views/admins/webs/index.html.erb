<div class="section">
	<%= link_to new_admins_web_path do %>
		<div class="btn" style="float:right">add project</div>
	<% end %>
	<h1 style="padding-top:5px;">Web</h1>
	<% alternate = "odd" %>
	<% @webs.each do |web| %>
		<div class="list <%= alternate %>">
			<table>
				<tr>
					<td class="drag">
						<%= web.placement %>
					</td>
					<td class='image'>
						<%= "<div class='inner'>".html_safe %>
							<%= image_tag web.photos.first.image.url(:thumb) %>
						</div>
					</td>
					<td class="title">
						<%= web.title %>
					</td>
					<td class="action">
						<%= link_to edit_admins_web_path(web) do %>
							<i class="icon-edit"></i>
						<% end %>
					</td>
					<td class="action">
						<%= link_to [:admins, web], :confirm => "Delete #{web.title}?", :method => :delete do %>
							<i class="icon-remove"></i>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
		<% alternate = alternate == "odd" ? "even" : "odd" %>
	<% end %>
</div>